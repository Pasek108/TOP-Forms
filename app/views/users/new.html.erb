<h1>Create new user</h1>


<%= form_with model: @user do |form| %>
  <%= form.label :username, "Username: " %>
  <%= form.text_field :username, placeholder: "Janusz", required: true %>
  <br>

  <%= form.label :email, "Email: " %>
  <%= form.text_field :email, placeholder: "janusz@mail.com", required: true %>
  <br>

  <%= form.label :password, "Password: " %>
  <%= form.password_field :password, placeholder: "v3ry_S3cREt_69", required: true %>
  <br>

  <%= form.submit "Submit" %>
<% end %>