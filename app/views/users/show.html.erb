<h1 class="text-2xl font-bold">
  User profile
</h1>

<div class="py-8">
  Username: <%= @user.username %><br>
  Email: <%= @user.email %><br>
  Password: <%= @user.password %><br>
</div>

<div class="flex gap-1">
  <%= 
    button_to "Edit user", edit_user_path(@user), method: :get,
    class: "bg-blue-600 text-white px-3 py-1.5 rounded-md cursor-pointer"
  %>
  <%= 
    button_to "Delete user", user_path(@user), method: :delete, data: { turbo_confirm: "Are you sure?" },
    class: "bg-red-600 text-white px-3 py-1.5 rounded-md cursor-pointer"
  %>
</div>
